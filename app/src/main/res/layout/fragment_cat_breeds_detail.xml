<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".presentation.cat_breeds_detail.CatBreedsDetailFragment">

    <TextView
        android:id="@+id/catBreedsText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:text="Breeds"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/catCountryText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/catCountryText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Country"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/catCoatText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/catBreedsText" />

    <TextView
        android:id="@+id/catCoatText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Coat"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/catPatternText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/catCountryText" />

    <TextView
        android:id="@+id/catPatternText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="300dp"
        android:text="Pattern"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/catCoatText" />


</androidx.constraintlayout.widget.ConstraintLayout>